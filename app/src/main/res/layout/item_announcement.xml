<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:backgroundTint="#FFF3E0"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAnnTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="כותרת ההודעה"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E65100"/>

        <ImageButton
            android:id="@+id/btnDeleteAnn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#D32F2F"
            android:contentDescription="מחק הודעה"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvAnnContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תוכן ההודעה כאן..."
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tvAnnAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מאת: מנהל"
            android:textSize="12sp"
            android:textColor="#757575"/>

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvAnnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2025"
            android:textSize="12sp"
            android:textColor="#757575"/>
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>